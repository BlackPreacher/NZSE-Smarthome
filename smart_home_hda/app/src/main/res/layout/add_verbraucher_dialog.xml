<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:minHeight="300dp"
    android:padding="7dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RaumName"
        android:id="@+id/titel_view_value_dia"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_add_verb_name_dia"
        android:layout_marginTop="22dp"
        android:hint="Name"
        android:layout_below="@+id/titel_view_value_dia"
        android:layout_alignEnd="@+id/slider_dia" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_add_verb_verbrauch_dia"
        android:hint="Verbrauch"
        android:layout_below="@+id/edit_add_verb_name_dia"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zustand"
        android:id="@+id/verbraucher_zustand_dia"
        android:checked="true"
        android:layout_below="@+id/zustand_titel_View"
        android:layout_alignStart="@+id/zustand_titel_View" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Zustand"
        android:id="@+id/zustand_titel_View"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edit_add_verb_verbrauch_dia"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schieberegler aktivieren"
        android:id="@+id/slider_check_dia"
        android:checked="false"
        android:layout_below="@+id/zustand_titel_View"
        android:layout_toEndOf="@+id/titel_view_value_dia"
        android:layout_marginStart="29dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slider_dia"
        android:max="34"
        android:indeterminate="false"
        android:layout_below="@+id/slider_check_dia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />
</RelativeLayout>