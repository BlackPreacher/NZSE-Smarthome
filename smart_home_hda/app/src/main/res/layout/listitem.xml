<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:focusable="false">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Header"
            android:id="@+id/raum_name_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:focusable="false"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:layout_gravity="right"
            android:checked="false"
            android:layout_marginEnd="21dp"
            android:layout_below="@+id/raum_name_view"
            android:layout_alignParentEnd="true"
            android:focusable="false"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="demotext"
            android:layout_alignBaseline="@+id/switch1"
            android:layout_alignBottom="@+id/switch1"
            android:layout_alignStart="@+id/raum_name_view"
            android:focusable="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verbrauch:"
            android:id="@+id/verbrauch_value_view"
            android:layout_marginEnd="38dp"
            android:focusable="false"
            android:layout_alignTop="@+id/text"
            android:layout_toStartOf="@+id/toggle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/verbrauch_einheit_view"
            android:layout_alignTop="@+id/verbrauch_value_view"
            android:layout_alignStart="@+id/verbrauch_value_view"
            android:layout_marginStart="71dp"
            android:focusable="false"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="list_toogle"
            android:id="@+id/toggle"
            android:layout_alignTop="@+id/raum_name_view"
            android:layout_alignParentEnd="true"
            android:checked="false"
            android:focusable="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/listitem_temperatur_view"
            android:layout_alignTop="@+id/toggle"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</LinearLayout>